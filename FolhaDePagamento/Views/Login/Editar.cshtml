@model LoginModel
@{
	ViewData["Title"] = "Editar Usuário";
}
<div class="text-center mx-auto col-4">
	<h1 class="display-4">Editar Usuário</h1>
	<form asp-controller="Login" asp-action="Alterar" method="post" class="col">
		<div class="row mt-4">
			<div class="col-sm-12">
				<input type="hidden" asp-for="Id" />
				<label for="usuario" class="form-label">Usuario</label>
				<input type="text" asp-for="Usuario" class="form-control" id="usuario" placeholder="Digite o usuário" readonly>
			</div>
		</div>
		<div class="row mt-4">
			<div class="col-sm-12">
				<label for="senhaAtual" class="form-label">Senha Antiga</label>
				<input type="password" class="form-control" id="senhaAtual" name="senhaAtual" placeholder="Digite a senha">
			</div>
		</div>
		<div class="row mt-4">
			<div class="col-sm-12">
				<label for="novaSenha" class="form-label">Senha</label>
				<input type="password"class="form-control" id="novaSenha"
				name="novaSenha" placeholder="Digite a senha">
			</div>
		</div>
		
		<div class="row col-6 mt-5 mx-auto">
			<div class="col-sm-6">
				<button type="submit" class="btn btn-primary btn-block">Atualizar</button>
			</div>
			<div class="col-sm-6">
				<a class="btn btn-secondary btn-block" asp-controller="Home" asp-action="Index" role="button">Voltar</a>
			</div>
		</div>
	</form>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErroLogin))
{
	<div class="alert alert-danger" role="alert">
		@ViewBag.ErroLogin
	</div>
}