@using FolhaDePagamento.Controllers;
@{
	var usuario = Context.Session.GetString(LoginController.SessionKeyUser);
	var idUsuario = Context.Session.GetInt32(LoginController.SessionKeyId);
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Folha de Pagamentos</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/FolhaDePagamento.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Folha de Pagamentos</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<div>
						<ul class="navbar-nav flex-grow-1">
							@if (@usuario != null)
							{
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-controller="Ferias" asp-action="Index">Solicitar Ferias</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-controller="HorasTrabalhadas" asp-action="Index">Espelho de Ponto</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-controller="Funcionario" asp-action="Index">Meu Cadastro</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-controller="Pagamento" asp-action="Index">Pagamentos</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Editar" asp-route-id=@idUsuario>Alterar Senha</a>
								</li>
							}
						</ul>
					</div>
					<div>
						<ul class="navbar-nav flex-grow-1">
							@if (@usuario == null)
							{
								<li class="nav-item">
									<a class="btn btn-success" asp-area="" asp-controller="Login" asp-action="Index">Entrar</a>
								</li>
							}
							else
							{
								<li class="nav-item mx-3">
									<span class="nav-link text-secondary">
										@ViewBag.NomeFuncionario
									</span>
								</li>
								<li class="nav-item mx-3">
									<h4 class="nav-link text-dark">Olá, @usuario</h4>
								</li>
								<li class="nav-item mx-3">
									<a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="Sair">Sair</a>
								</li>
							}
						</ul>
					</div>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - <a asp-area="" asp-controller="Home" asp-action="Index"> Folha de Pagamentos</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
